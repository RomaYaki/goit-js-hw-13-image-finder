
<div class="page-{{this.page}}" style="display: flex; justify-content: space-between; flex-wrap: wrap;">
{{#each this.hits}}
<div class="photo-card card" style="width: 18rem; margin: 5px; width: 32%;" >

    <div class="card-body">
        <img src="{{webformatURL}}" alt="" class="card-img-top" />

        <div class="stats">
            <p class="stats-item">
                <i class="material-icons">thumb_up</i>
                {{this.likes}}
            </p>
            <p class="stats-item">
                <i class="material-icons">visibility</i>
                {{this.views}}
            </p>
            <p class="stats-item">
                <i class="material-icons">comment</i>
                {{this.comments}}
            </p>
            <p class="stats-item">
                <i class="material-icons">cloud_download</i>
                {{this.downloads}}
            </p>
        </div>
    </div>
</div>
{{/each}}
</div>
